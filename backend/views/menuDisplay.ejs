<% function displayMenuItems(menuItems) { %>
    <ul>
        <% menuItems.forEach(menuItem=> { %>
            <li>

                <a class="<%= menuItem.submenu ? 'top-tier' : '' %>" href="#">
                    <div class="d-flex" style="justify-content: space-between;">
                        <span>
                            <%= menuItem.name %>
                        </span>
                        <span>
                            <img src="/images/pen.png" class="mx-2" alt="" onclick="edit_menu('<%= menuItem._id %>')">


                            <img src="/images/trash.png" class="mx-2" alt=""
                                onclick="delete_menu('<%= menuItem._id %>')">
                        </span>
                    </div>
                </a>

                <% if (menuItem.child && menuItem.child.length> 0) { %>
                    <% displayMenuItems(menuItem.child); %>
                        <% } %>
            </li>
            <% }); %>
    </ul>
    <% } %>

